<div class="flex flex-col w-full justify-center items-center mt-10">
  <div class="w-6/12 flex flex-col items-center rounded-md border border-gray-200">
    <header>
      <img class="self-center mt-5 mb-1" width="70" height="70" src="https://bc3-production-assets-cdn.basecamp-static.com/assets/logos/paperclip-logo-349bf403c234be9d67457f2825054e138f6d54affe467717f3da909cab741cba.svg" alt="">
    </header>
    <div class="bg-white rounded-lg flex flex-col items-center w-6/12">
      <h1 class="text--darker font-medium text-2xl self-center">
        Login to Basecamp 3
      </h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "p-4 w-full"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="break relative py-3 my-2 flex justify-center">
          <div class="inline-block break__content z-50 relative bg-white self-center px-2 text--gray">Or, Signin using your email</div>

          <div class="absolute w-full h-1 border-b border-gray-300 left-0 right-0" style="top: 50%; z-index: 1"></div>
        </div>

        <div class="field">
          <%= f.email_field :email, autocomplete: "email", class: "w-full rounded bg-white focus:outline-none focus:shadow-outline border border-gray-400 p-2 my-2", placeholder: "Your email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, class: "w-full rounded bg-white focus:outline-none focus:shadow-outline border border-gray-400 p-2 my-2", placeholder: "password" %>
        </div>

        <div class="actions">
          <button type="submit" class="w-full text-white rounded-md p-1 bg--green">Log in</button>
        </div>
      <% end %>
    </div>
  </div>

  <%= render 'devise/shared/links' %>
</div>