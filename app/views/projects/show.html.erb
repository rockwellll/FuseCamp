<%#= turbo_frame_tag "rooms", class: "w-full" do %>

  <div class="w-6/12 flex flex-col bg-white h-screen">
    <aside class="self-end px-2 py-2">
      <button class="p-2 border rounded-full">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z"></path></svg>
      </button>
    </aside>

    <header class="flex flex-col items-center">
      <h1 class="text-2xl capitalize font-medium text--darker">
        <%= @project.name %>
      </h1>

      <p class="text--gray">
        <%= @project.description %>
      </p>


      <div class="w-full flex justify-center">
        <button class="border rounded-full py-1 text-sm px-3 hover:bg-gray-200">
          Add/Remove people
        </button>
      </div>
    </header>

    <section class="w-full px-10 grid grid-cols-3 my-2">
      <a href="">
        <article class="flex flex-col justify-center items-center rounded-md border p-2 py-4 mx-2">
          <header class="w-9/12 text-center font-medium text--darker">
            Message Board
          </header>

          <hr class="h-1 my-2 p-1 w-9/12"/>

          <main>
            <div class="bg--blue rounded-full p-2 flex items-center justify-center">
              <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 13V5a2 2 0 00-2-2H4a2 2 0 00-2 2v8a2 2 0 002 2h3l3 3 3-3h3a2 2 0 002-2zM5 7a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1zm1 3a1 1 0 100 2h3a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </main>

          <footer class="w-9/12 text-sm">

            <p>
              Post announcements, pitch ideas, progress updates, etc. and keep feedback on-topic.
            </p>
          </footer>
        </article>
      </a>

      <%= link_to user_project_todo_lists_path(user_id: current_user, project_id: @project) do %>

        <article class="flex flex-col justify-center items-center rounded-md border p-2 py-4 mx-2">
          <header class="w-9/12 text-center font-medium text--darker">
            To-dos
          </header>

          <hr class="h-1 my-2 p-1 w-9/12"/>

          <main>
            <div class="bg--blue rounded-full p-2 flex items-center justify-center">
              <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 13V5a2 2 0 00-2-2H4a2 2 0 00-2 2v8a2 2 0 002 2h3l3 3 3-3h3a2 2 0 002-2zM5 7a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1zm1 3a1 1 0 100 2h3a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
            </div>
          </main>

          <footer class="w-9/12 text-sm">

            <p>
              Post announcements, pitch ideas, progress updates, etc. and keep feedback on-topic.
            </p>
          </footer>
        </article>
      <% end %>

      <a href="">
        <article class="flex flex-col justify-center items-center rounded-md border p-2 py-4 mx-2">
          <header class="w-9/12 text-center font-medium text--darker">
            Docs & Files
          </header>

          <hr class="h-1 my-2 p-1 w-9/12"/>

          <main>
            <div class=" rounded-full p-2 flex items-center justify-center">
              <svg class="w-12 h-12 text--darker" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path></svg>          </div>
          </main>

          <footer class="w-9/12 text-sm">

            <p>
              Post announcements, pitch ideas, progress updates, etc. and keep feedback on-topic.
            </p>
          </footer>
        </article>
      </a>


      <a href="">
        <article class="flex flex-col justify-center items-center rounded-md border p-2 py-4 mx-2 my-4">
          <header class="w-9/12 text-center font-medium text--darker">
            Campfire
          </header>

          <hr class="h-1 my-2 p-1 w-9/12"/>

          <main>
            <div class="bg--blue--light rounded-full p-2 flex items-center justify-center">
              <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path><path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"></path></svg>          </div>
          </main>

          <footer class="w-11/12 text-sm my-4">

            <p>
              Chat casually with the group, ask random questions, and share stuff without ceremony.
            </p>
          </footer>
        </article>
      </a>



      <a href="">
        <article class="flex flex-col justify-center items-center rounded-md border p-2 py-4 mx-2 my-4">
          <header class="w-9/12 text-center font-medium text--darker">
            Shedule
          </header>

          <hr class="h-1 my-2 p-1 w-9/12"/>

          <main>
            <div style="background: #FF2D55" class="rounded-full p-2 flex items-center justify-center">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
            </div>
          </main>

          <footer class="w-11/12 text-sm my-4">

            <p>
              Create recurring questions so you don't have to pester your team about what’s going on.
            </p>
          </footer>
        </article>
      </a>

      <a href="">
        <article class="flex flex-col justify-center items-center rounded-md border p-2 py-4 mx-1 my-4">
          <header class="w-9/12 text-center font-medium text--darker">
            Automatic Check-ins
          </header>

          <hr class="h-1 my-2 p-1 w-9/12"/>

          <main>
            <div class="rounded-full p-2 flex items-center justify-center">
              <svg class="w-12 h-12 text-indigo-800" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>
            </div>
          </main>

          <footer class="w-11/12 text-sm my-4">

            <p>
              Set important dates on a shared schedule. Subscribe to events in Google Cal, iCal, or Outlook.
            </p>
          </footer>
        </article>
      </a>
    </section>

    <hr class="w-10/12 self-center" />

    <footer class="flex flex-col items-center justify-between">
      <header class="flex flex-col items-center">
        <img class="self-center mt-5 mb-1" width="70" height="70" src="https://bc3-production-assets-cdn.basecamp-static.com/assets/logos/paperclip-logo-349bf403c234be9d67457f2825054e138f6d54affe467717f3da909cab741cba.svg" alt="">
        <h6 class="font-medium text--darker">Welcome to <%= @project.name %>!</h6>
        <small>
          <%= @project.user.email %> created this <%= @project.created_at.strftime("%F") %>
        </small>
      </header>

      <p class="text--gray text-center self-center w-8/12 my-2">
        This is the place to do everything related to this project — make plans, discuss progress, and get work done.
      </p>

      <h6 class="text--gray mt-2">
        Happy Basecamping!
      </h6>
    </footer>
  </div>
<%# end %>